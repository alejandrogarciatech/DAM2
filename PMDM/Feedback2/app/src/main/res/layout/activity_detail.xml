<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nombrePaisTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_margin="50dp"
        android:text="@string/pais"
        android:textAlignment="center"
        android:textSize="55sp"
        android:background="@color/grey"
        app:layout_constraintBottom_toTopOf="@id/habitantesTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/habitantesTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/habitantes"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_margin="50dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nombrePaisTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>